<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.juan.arpit.juan.LRC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389"
        tools:layout_editor_absoluteY="131dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_focused"
                app:cardCornerRadius="19dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="9dp">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:elevation="2dp"
                    android:text=" Hostelers can go outside the campus after 17:00 p.m and on Saturday they can go outside the campus after 13:00 p.m .On Sundays hostellers can go at any time.It is compulsion to enter in hostel before 7:00 p.m"
                    android:textColor="#fd0a26"
                    android:textSize="18sp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="2.42"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_focused"
                app:cardCornerRadius="14dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="9dp">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/hstu" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="85dp"
                    android:layout_marginRight="7dp"
                    android:elevation="2dp"
                    android:paddingRight="5dp"
                    android:paddingTop="9dp"
                    android:text="Book issue timings in Library Resource Center is 11:00 am to 5:00 p.m from Monday to friday. No books will be issued on Saturday. L.R.C will be closed on Sundays."
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_focused"
                app:cardCornerRadius="14dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="9dp">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="60dp"
                    android:elevation="3dp"
                    android:paddingRight="5dp"
                    android:paddingTop="9dp"
                    android:text=" In university hours,if any student want to go outside then he/she has to take permmission from H.O.D of departments and they will provide them gate out pass."
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="270dp"
                    android:layout_marginRight="30dp"
                    app:srcCompat="@drawable/adm" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_focused"
                app:cardCornerRadius="14dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="9dp">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp"
                    android:elevation="2dp"
                    android:paddingRight="5dp"
                    android:paddingTop="9dp"
                    android:text="Any Student can go to Cafeteria from 10:30 a.m to 9:00 p.m.Cafeteria will open on sundays after 12:00 p.m"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icecream" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</android.widget.RelativeLayout>
